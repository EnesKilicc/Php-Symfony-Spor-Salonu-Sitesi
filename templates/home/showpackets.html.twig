{% extends 'homebase.html.twig' %}

{% block title %}{{setting[0].title}}{% endblock %}
{% block description %}{{setting[0].description}}{% endblock %}
{% block keywords %}{{setting[0].keywords}}{% endblock %}


{% block body %}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="/"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li class="active">Hakkımızda</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
<section id="content">
    <div class="container">
        <div class="row">

            <div class="col-lg-4">
                <aside class="left-sidebar">
                    <div class="widget">
                        <form role="form">
                            <div class="form-group">
                                <input type="text" class="form-control" id="s" placeholder="Search..">
                            </div>
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Categories</h5>
                        <ul class="cat">
                            {% for rs in category %}
                            <li><i class="fa fa-angle-right"></i><a href="/kategoriler/{{ rs.id }}">{{ rs.title }}</a><span> (20)</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                </aside>
            </div>
            <div class="col-lg-8">
                {% for rs in packet %}
                <article>
                    <div class="post-image">
                        <div class="post-heading">
                            <h3><a href="#">{{ rs.title }}</a></h3>
                        </div>
                        <img src="{{ asset('uploads/images/' ~ rs.image) }}" alt="" class="img-responsive" />
                    </div>
                    <p>
                       {{ rs.description }}
                    </p>
                    <div class="bottom-article">
                        <ul class="meta-post">
                            <li><i class="fa fa-calendar"></i><a href="#"> Mar 27, 2014</a></li>
                            <li><i class="fa fa-user"></i><a href="#"> Admin</a></li>
                            <li><i class="fa fa-folder-open"></i><a href="#"> Blog</a></li>
                            <li><i class="fa fa-comments"></i><a href="#">4 Comments</a></li>
                        </ul>
                        <a href="/packet/{{ rs.id }}" class="readmore pull-right">Continue reading <i class="fa fa-angle-right"></i></a>
                    </div>
                </article>
                {%  endfor %}
                </div>
        </div>
    </div>
</section>
{% endblock %}
