{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profil{% endblock %}

{% block body %}
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="/"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li><a href="/user">{{ app.user.name }} {{ app.user.surname }}</a><i class="icon-angle-right"></i></li>
                    <li><a href="/user/{{ app.user.id }}/edit">My Packets</a><i class="icon-angle-right"></i></li>

                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="widget" style="width: 300px">
                <form role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" id="s" placeholder="Search..">
                    </div>
                </form>
            </div>
            {{ include('user/usermenu.html.twig') }}
            <div class="col-lg-8">
                <div class="col-md-2">
                    <a href="{{ path('user_spor_paket_new') }}" class="btn btn-success">Create new</a></div>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Keywords</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Trainer</th>
                        <th>Saat</th>
                        <th>Days</th>
                        <th>Kisisayisi</th>
                        <th>Fiyat</th>
                        <th>I.Gallery</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for spor_paket in spor_pakets %}
                        <tr>
                            <td>{{ spor_paket.id }}</td>
                            <td>{{ spor_paket.title }}</td>
                            <td>{{ spor_paket.keywords }}</td>
                            <td>{{ spor_paket.description }}</td>
                            <td><img src="{{ asset('uploads/images/' ~ spor_paket.image) }}" height="40"></td>
                            <td>{{ spor_paket.Trainer }}</td>
                            <td>{{ spor_paket.Saat ? spor_paket.Saat|date('H:i:s') : '' }}</td>
                            <td>{{ spor_paket.days }}</td>
                            <td>{{ spor_paket.kisisayisi }}</td>
                            <td>{{ spor_paket.fiyat }}</td>
                            <td>
                                <a href="javascript:openWin('{{path('admin_image_new', {'id':spor_paket.id})  }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizeable=no,width=900,height600');">
                                    <img src="{{ asset('assets/admin/img') }}/gallery.png" height="40">
                                </a>
                            </td>
                            <td>{{ spor_paket.status }}</td>
                            <td>
                                <a href="{{ path('user_spor_paket_show', {'id': spor_paket.id}) }}" class="btn btn-block btn-info">show</a>
                            </td>
                            <td>
                                <a href="{{ path('user_spor_paket_edit', {'id': spor_paket.id}) }}"class="btn btn-block btn-success">edit</a>
                            </td>
                           
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="13">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
{% endblock %}
