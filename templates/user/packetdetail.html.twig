{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profil{% endblock %}

{% block body %}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="/"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="/user">{{ app.user.name }} {{ app.user.surname }}</a><i class="icon-angle-right"></i></li>
                        <li><a href="/user/{{ app.user.id }}/edit">My Comments</a><i class="icon-angle-right"></i></li>

                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="widget" style="width: 300px">
                    <form role="form">
                        <div class="form-group">
                            <input type="text" class="form-control" id="s" placeholder="Search..">
                        </div>
                    </form>
                </div>
                {{ include('user/usermenu.html.twig') }}
                <div class="col-lg-8">
                    <article>
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ spor_paket.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ spor_paket.title }}</td>
                            </tr>
                            <tr>
                                <th>Keywords</th>
                                <td>{{ spor_paket.keywords }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ spor_paket.description }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td><img src="{{ asset('uploads/images/' ~ spor_paket.image) }}" height="40"> </td>
                            </tr>
                            <tr>
                                <th>Trainer</th>
                                <td>{{ spor_paket.Trainer }}</td>
                            </tr>
                            <tr>
                                <th>Saat</th>
                                <td>{{ spor_paket.Saat ? spor_paket.Saat|date('H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Days</th>
                                <td>{{ spor_paket.days }}</td>
                            </tr>
                            <tr>
                                <th>Kisisayisi</th>
                                <td>{{ spor_paket.kisisayisi }}</td>
                            </tr>
                            <tr>
                                <th>Fiyat</th>
                                <td>{{ spor_paket.fiyat }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ spor_paket.status }}</td>
                            </tr>
                            <tr>
                                <th>Created_at</th>
                                <td>{{ spor_paket.createdAt ? spor_paket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>

                    </article>


                </div>
            </div>
        </div>
    </section>
{% endblock %}
