{% extends 'adminbase.html.twig' %}

{% block title %}SporPaket index{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">   
    function openWin(windowURL, windowName, windowFeatures) {
        window.open(windowURL, windowName, windowFeatures);
    }
    </SCRIPT>
<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <h1>SporPaket index</h1>
                <div class="col-md-2">
                <a href="{{ path('spor_paket_new') }}" class="btn btn-success">Create new</a></div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Image</th>
                <th>Trainer</th>
                <th>Saat</th>
                <th>Days</th>
                <th>Kisisayisi</th>
                <th>Fiyat</th>
                <th>I.Gallery</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for spor_paket in spor_pakets %}
            <tr>
                <td>{{ spor_paket.id }}</td>
                <td>{{ spor_paket.title }}</td>
                <td>{{ spor_paket.keywords }}</td>
                <td>{{ spor_paket.description }}</td>
                <td><img src="{{ asset('uploads/images/' ~ spor_paket.image) }}" height="40"></td>
                <td>{{ spor_paket.Trainer }}</td>
                <td>{{ spor_paket.Saat ? spor_paket.Saat|date('H:i:s') : '' }}</td>
                <td>{{ spor_paket.days }}</td>
                <td>{{ spor_paket.kisisayisi }}</td>
                <td>{{ spor_paket.fiyat }}</td>
                <td>
                    <a href="javascript:openWin('{{path('admin_image_new', {'id':spor_paket.id})  }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizeable=no,width=900,height600');">
                        <img src="{{ asset('assets/admin/img') }}/gallery.png" height="40">
                    </a>
                </td>
                <td>{{ spor_paket.status }}</td>
                <td>
                    <a href="{{ path('spor_paket_show', {'id': spor_paket.id}) }}" class="btn btn-block btn-info">show</a>
                </td>
                <td>
                        <a href="{{ path('spor_paket_edit', {'id': spor_paket.id}) }}"class="btn btn-block btn-success">edit</a>
                </td>
                <td>
                    <div class="col-md-2">
                        {{ include('admin/spor_paket/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            </div>
        </div>
    </div>
</div>
{% endblock %}
