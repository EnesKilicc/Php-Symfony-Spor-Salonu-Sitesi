{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profil{% endblock %}

{% block body %}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="/"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="/user">Profile</a><i class="icon-angle-right"></i></li>
                        <li class="active">{{ app.user.name }} {{ app.user.surname }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="widget" style="width: 300px">
                    <form role="form">
                        <div class="form-group">
                            <input type="text" class="form-control" id="s" placeholder="Search..">
                        </div>
                    </form>
                </div>
                {{ include('user/usermenu.html.twig') }}
                <div class="col-lg-8">
                    <h1>{{ app.user.name }} {{ app.user.surname }}</h1>
                    <img src="{{ asset('uploads/images/' ~ app.user.image)}}">

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ app.user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ app.user.email }}</td>
                        </tr>

                        <tr>
                            <th>Name</th>
                            <td>{{ app.user.name }}</td>
                        </tr>
                        <tr>
                            <th>Surname</th>
                            <td>{{ app.user.surname }}</td>
                        </tr>

                        <tr>
                            <th>Created_at</th>
                            <td>{{ app.user.createdAt |date('Y-m-d ')}}</td>
                        </tr>
                        </tbody>
                    </table>


                    <a href="{{ path('user_edit', {'id': app.user.id}) }}">Edit Profile</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
